<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SocialSphere</title>
    <link rel="icon" type="image/png" href="/logo_SS.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Custom configuration to extend Tailwind colors -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        darkbg: '#0d1117',
                        cardbg: '#161b22',
                    }
                }
            }
        }
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
        body {
            font-family: 'Inter', sans-serif;
            background-color: #0d1117;
        }
        /* Hide scrollbar for clean UI */
        ::-webkit-scrollbar {
            width: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #0d1117; 
        }
        ::-webkit-scrollbar-thumb {
            background: #374151; 
            border-radius: 4px;
        }
        
        /* Loading Spinner */
        .spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin-right: 8px;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .btn-loading {
            display: flex;
            align-items: center;
            justify-content: center;
            pointer-events: none;
            opacity: 0.9;
        }
        
        .btn-loading .spinner {
            margin-right: 8px;
        }
    </style>
</head>
<body class="flex justify-center items-center min-h-screen p-4">

    <div id="auth-container" class="w-full max-w-lg bg-gray-800 p-8 rounded-2xl shadow-2xl border border-gray-700">
        
        <header class="text-center mb-8">
            <h1 class="text-3xl font-bold text-white mb-2 tracking-tight">SocialSphere</h1>
            <p id="header-text" class="text-gray-400 text-sm">Sign in to continue your journey.</p>
        </header>

        <!-- Message Box -->
        <div id="message-box" class="hidden p-4 mb-6 rounded-lg text-sm font-medium transition-all duration-300" role="alert"></div>

        <!-- SIGN IN FORM -->
        <form id="signInForm" class="space-y-5">
            <div>
                <label for="signin-email" class="block text-xs font-semibold uppercase tracking-wider text-gray-400 mb-1">Email</label>
                <input type="email" id="signin-email" name="email" required autocomplete="email"
                       class="w-full px-4 py-3 bg-gray-900 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none"
                       placeholder="you@example.com">
            </div>

            <div>
                <label for="signin-password" class="block text-xs font-semibold uppercase tracking-wider text-gray-400 mb-1">Password</label>
                <input type="password" id="signin-password" name="password" required autocomplete="current-password"
                       class="w-full px-4 py-3 bg-gray-900 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all outline-none"
                       placeholder="••••••••">
            </div>

            <div class="text-right">
                <a href="/password/forgot" class="text-sm text-blue-400 hover:text-blue-300">Forgot password?</a>
            </div>

            <button type="submit"
                    class="w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md transition duration-200 transform hover:scale-[1.02]"
                    id="signin-submit">
                Sign In
            </button>
        </form>

        <!-- SIGN UP FORM (New Layout) -->
<form id="signUpForm" class="space-y-5 hidden" enctype="multipart/form-data">
    
    <div class="flex justify-center">
        <div class="relative group w-32 h-32">
            <input type="file" id="signup-profile-picture" name="profilePicture" accept="image/*" class="hidden">
            <label for="signup-profile-picture" 
                   class="flex flex-col items-center justify-center w-full h-full border-2 border-dashed border-gray-500 rounded-full cursor-pointer hover:border-blue-500 hover:bg-gray-700 transition-all overflow-hidden bg-gray-900">
                
                <div id="upload-placeholder" class="flex flex-col items-center">
                    <svg class="w-8 h-8 text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    <span class="text-[10px] text-gray-400 uppercase font-bold">Upload</span>
                </div>

                <img id="image-preview" class="hidden w-full h-full object-cover" />
                
                <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity rounded-full">
                    <span class="text-white text-xs font-bold">Change</span>
                </div>
            </label>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label for="signup-username" class="block text-xs font-semibold uppercase tracking-wider text-gray-400 mb-1">Username</label>
            <input type="text" id="signup-username" name="username" required
                class="w-full px-4 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500 outline-none">
        </div>
        <div>
            <label for="signup-dob" class="block text-xs font-semibold uppercase tracking-wider text-gray-400 mb-1">Birth Date</label>
            <input type="date" id="signup-dob" name="dateOfBirth" required
                class="w-full px-4 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500 outline-none">
        </div>
    </div>

    <div>
        <label for="signup-location" class="block text-xs font-semibold uppercase tracking-wider text-gray-400 mb-1">Location</label>
        <div class="relative">
            <input type="text" id="signup-location" name="location" 
                class="w-full px-4 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500 outline-none pl-10"
                placeholder="City, Country">
            <svg class="w-5 h-5 text-gray-500 absolute left-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
        </div>
    </div>

    <div>
        <label class="block text-xs font-semibold uppercase tracking-wider text-gray-400 mb-2">Gender</label>
        <div class="grid grid-cols-2 gap-4">
            <label class="cursor-pointer">
                <input type="radio" name="gender" value="male" class="peer sr-only" required>
                <div class="rounded-lg border border-gray-600 bg-gray-900 p-2 text-center hover:bg-gray-700 peer-checked:bg-blue-900 peer-checked:border-blue-500 peer-checked:text-blue-200 transition-all">
                    <span class="text-sm font-medium">Male</span>
                </div>
            </label>
            <label class="cursor-pointer">
                <input type="radio" name="gender" value="female" class="peer sr-only">
                <div class="rounded-lg border border-gray-600 bg-gray-900 p-2 text-center hover:bg-gray-700 peer-checked:bg-pink-900 peer-checked:border-pink-500 peer-checked:text-pink-200 transition-all">
                    <span class="text-sm font-medium">Female</span>
                </div>
            </label>
        </div>
    </div>

    <div>
        <label for="signup-email" class="block text-xs font-semibold uppercase tracking-wider text-gray-400 mb-1">Email Address</label>
        <input type="email" id="signup-email" name="email" required
            class="w-full px-4 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500 outline-none">
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label for="signup-password" class="block text-xs font-semibold uppercase tracking-wider text-gray-400 mb-1">Password</label>
            <input type="password" id="signup-password" name="password" required
                class="w-full px-4 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500 outline-none">
        </div>
        <div>
            <label for="signup-confirm-password" class="block text-xs font-semibold uppercase tracking-wider text-gray-400 mb-1">Confirm</label>
            <input type="password" id="signup-confirm-password" name="confirm-password" required
                class="w-full px-4 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500 outline-none">
        </div>
    </div>

    <button type="submit"
            class="w-full py-3 px-4 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-lg shadow-md transition duration-200 transform hover:scale-[1.02]"
            id="signup-submit">
        Create Account
    </button>
</form>

        <!-- Toggle Link -->
        <div class="mt-8 pt-6 border-t border-gray-700 text-center">
            <p id="toggle-prompt" class="text-sm text-gray-400">
                Don't have an account? 
                <button type="button" id="toggleButton" class="text-blue-400 hover:text-blue-300 font-bold ml-1 transition focus:outline-none">
                    Sign Up
                </button>
            </p>
        </div>
    </div>

    <!-- LOGIC SCRIPT -->
    <script>
        // --- DOM Elements ---
        const signInForm = document.getElementById('signInForm');
        const signUpForm = document.getElementById('signUpForm');
        const signInSubmitBtn = document.getElementById('signin-submit');
        const signUpSubmitBtn = document.getElementById('signup-submit');
        const toggleButton = document.getElementById('toggleButton');
        const togglePrompt = document.getElementById('toggle-prompt');
        const headerText = document.getElementById('header-text');
        const messageBox = document.getElementById('message-box');

        // Image Upload Elements
        const fileInput = document.getElementById('signup-profile-picture');
        const previewImg = document.getElementById('image-preview');
        const uploadPlaceholder = document.getElementById('upload-placeholder');

        let isSignIn = true;
        
        // Loading state helper function
        function showLoading(button, show = true) {
            if (show) {
                button.disabled = true;
                button.classList.add('btn-loading');
                const originalText = button.textContent;
                button.innerHTML = '<span class="spinner"></span>' + originalText;
                button.dataset.originalText = originalText;
            } else {
                button.disabled = false;
                button.classList.remove('btn-loading');
                button.textContent = button.dataset.originalText || 'Submit';
            }
        }

        // --- UI Functions ---

        // Handle File Preview
        fileInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    previewImg.classList.remove('hidden');
                    uploadPlaceholder.classList.add('hidden');
                }
                reader.readAsDataURL(file);
            }
        });

function displayMessage(message, type) {
    messageBox.textContent = message;


    let classes = 'fixed bottom-10 left-1/2 transform -translate-x-1/2 z-50 px-6 py-3 rounded-full text-sm font-medium shadow-xl transition-all duration-300';

    if (type === 'error') {
        classes += ' bg-red-900 text-red-100 border border-red-700';
    } else if (type === 'success') {
        classes += ' bg-green-900 text-green-100 border border-green-700';
    } else {
     
        classes += ' bg-gray-800 text-white border border-gray-700';
    }

    messageBox.className = classes;

   
    messageBox.classList.remove('hidden');
  
    setTimeout(() => {
        messageBox.classList.add('hidden');
    }, 5000);
}

        function toggleAuthMode() {
            isSignIn = !isSignIn;
            
            if (isSignIn) {
                signInForm.classList.remove('hidden');
                signUpForm.classList.add('hidden');
                headerText.textContent = "Sign in to continue your journey.";
                togglePrompt.innerHTML = 'Don\'t have an account? <button type="button" id="toggleButtonInner" class="text-blue-400 hover:text-blue-300 font-bold ml-1 transition focus:outline-none">Sign Up</button>';
            } else {
                signInForm.classList.add('hidden');
                signUpForm.classList.remove('hidden');
                headerText.textContent = "Create an account and connect with the world.";
                togglePrompt.innerHTML = 'Already have an account? <button type="button" id="toggleButtonInner" class="text-blue-400 hover:text-blue-300 font-bold ml-1 transition focus:outline-none">Sign In</button>';
            }
            
            document.getElementById('toggleButtonInner').addEventListener('click', toggleAuthMode);
            messageBox.classList.add('hidden');
        }


        toggleButton.addEventListener('click', toggleAuthMode);

        signInForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const email = document.getElementById('signin-email').value;
            const password = document.getElementById('signin-password').value;
            
            showLoading(signInSubmitBtn, true);
            handleSignIn({ email, password });
        });

        signUpForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const password = document.getElementById('signup-password').value;
            const confirmPassword = document.getElementById('signup-confirm-password').value;
            
            if (password !== confirmPassword) {
                displayMessage('Passwords do not match.', 'error');
                return;
            }
            if (password.length < 6) {
                displayMessage('Password must be at least 6 characters.', 'error');
                return;
            }

           
            const formData = new FormData(signUpForm);
            formData.delete('confirm-password');
            
            showLoading(signUpSubmitBtn, true);
            handleSignUp(formData);
        });

      

        async function handleSignIn(data) {
            try {
                const response = await fetch('/signin', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

           
                if (response.redirected) {
                    displayMessage('Login successful! Redirecting...', 'success');
                    setTimeout(() => {
                        window.location.href = response.url; 
                    }, 1000);
                    return; 
                }
                
              
                const result = await response.json(); 
                
                if (response.ok) {
                    displayMessage('Login successful', 'success');
         
                    if (result.redirectUrl) {
                         setTimeout(() => { window.location.href = result.redirectUrl; }, 1000);
                    }
                } else {
                    displayMessage(result.message || 'Login failed due to an unknown issue.', 'error');
                }
                
            } catch (error) {
                displayMessage('Network error. Unable to reach server.', 'error');
                console.error('Sign In Error:', error);
            } finally {
                showLoading(signInSubmitBtn, false);
            }
        }

        async function handleSignUp(formData) {
            try {
               
                const response = await fetch('/signup', {
                    method: 'POST',
                    body: formData 
                });

          
                const contentType = response.headers.get('content-type');
                if (contentType && contentType.includes('application/json')) {
                    const result = await response.json();
                    
                    if (response.ok) {
                       
                        displayMessage(result.message || 'Account created successfully! Please check your email.', 'success');
                        
                     
                        setTimeout(() => toggleAuthMode(), 3000); 
                    } else {
                        displayMessage(result.message || 'Registration failed.', 'error');
                    }
                } else {
                    displayMessage('Unexpected response from server.', 'error');
                }
            } catch (error) {
                displayMessage('Network error. Is the server running?', 'error');
                console.error('Sign Up Error:', error);
            } finally {
                showLoading(signUpSubmitBtn, false);
            }
        }
    </script>
</body>
</html>